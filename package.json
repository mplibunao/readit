{
	"name": "readit",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"clean:turbo": "turbo run clean:turbo",
		"build": "turbo run build --parallel",
		"dev": "turbo run dev --parallel",
		"db:migrate:dev": "turbo run db:migrate:dev --parallel",
		"test": "turbo run test --parallel",
		"test:watch": "turbo run test:watch",
		"lint:check": "turbo run lint:check --parallel",
		"lint:fix": "turbo run lint:fix --parallel",
		"format:fix": "turbo format:fix --parallel",
		"format:check": "turbo format:check --parallel",
		"ci": "turbo run ci --parallel",
		"docker:up": "docker-compose up -d"
	},
	"devDependencies": {
		"@readit/eslint-config": "workspace:*",
		"@readit/prettier-config": "workspace:*",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=8.15.0",
		"node": ">=18.12.1"
	},
	"prettier": "@readit/prettier-config",
	"packageManager": "pnpm@7.14.1"
}
