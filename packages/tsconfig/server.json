{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Server (tsc)",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["esnext"],
		"useDefineForClassFields": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"newLine": "lf",
		"experimentalDecorators": true,
		"noEmitOnError": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
