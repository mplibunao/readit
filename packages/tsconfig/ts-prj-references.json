{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "typescript-project-references",
	"extends": "./esbuild-server.json",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"incremental": true,
		"noEmitOnError": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
