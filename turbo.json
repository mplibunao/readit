{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"web#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			],
			"env": [
				"VERCEL_URL",
				"PORT",
				"NODE_ENV",
				"ANALYZE",
				"API_URL",
				"NEXT_PUBLIC_API_URL",
				"EDGE_CONFIG",
				"APP_NAME",
				"VERCEL_ENV",
				"CI"
			]
		},
		"build:analyze": {
			"dependsOn": ["^build:analyze"],
			"outputs": ["analyze", "dist/**"],
			"inputs": [
				"src/**/*.{ts,tsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"lint:check": {
			"outputs": [".eslintcache"],
			"dependsOn": [],
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"lint:fix": {
			"outputs": [".eslintcache"],
			"dependsOn": [],
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": [],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.stories.tsx",
				"vitest.config.ts",
				"jest.config.js"
			]
		},
		"dev": {
			"cache": false
		},
		"typecheck": {
			"outputs": ["types/**", "tsconfig.tsbuildinfo"],
			"dependsOn": [],
			"inputs": ["src/**/*.{tsx,ts}", "tsconfig.json"]
		},
		"format:check": {
			"outputs": [],
			"inputs": ["src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}"]
		},
		"format:fix": {
			"outputs": [],
			"inputs": ["src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}"]
		},
		"ci": {
			"dependsOn": ["typecheck", "lint:check", "format:check", "test"]
		}
	}
}
