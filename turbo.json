{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"clean:turbo": {
			"dependsOn": ["^clean:turbo"],
			"cache": false
		},
		"clean:ts": {
			"dependsOn": ["^clean:ts"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json",
				"esbuild-tsconfig.json"
			]
		},
		"web#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			],
			"env": [
				"VERCEL_URL",
				"NEXT_PUBLIC_VERCEL_URL",
				"PORT",
				"NODE_ENV",
				"ANALYZE",
				"API_URL",
				"NEXT_PUBLIC_API_URL",
				"EDGE_CONFIG",
				"APP_NAME",
				"VERCEL_ENV",
				"CI"
			]
		},
		"build:analyze": {
			"dependsOn": ["^build:analyze"],
			"outputs": ["analyze", "dist/**"],
			"inputs": [
				"src/**/*.{ts,tsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json",
				"esbuild-tsconfig.json"
			]
		},
		"lint:check": {
			"outputs": [".eslintcache"],
			"dependsOn": [],
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"lint:fix": {
			"outputs": [".eslintcache"],
			"dependsOn": [],
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"!src/**/*.test.{tsx,ts}",
				"tsconfig.json"
			]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": ["db:migrate:test"],
			"inputs": [
				"src/**/*.{tsx,ts}",
				"!src/**/*.stories.tsx",
				"vitest.config.ts",
				"jest.config.js"
			]
		},
		"dev": {
			"dependsOn": ["db:gen:types"],
			"cache": false
		},
		"typecheck": {
			"outputs": ["dts/**", "tsconfig.tsbuildinfo"],
			"dependsOn": [],
			"inputs": ["src/**/*.{tsx,ts}", "tsconfig.json"]
		},
		"format:check": {
			"outputs": [],
			"inputs": ["src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}"]
		},
		"format:fix": {
			"outputs": [],
			"inputs": ["src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}"]
		},
		"ci": {
			"dependsOn": ["typecheck", "lint:check", "format:check", "test"]
		},
		"db:gen:types": {
			"outputs": ["src/db.d.ts"],
			"inputs": ["src/migrations/**"],
			"env": ["DATABASE_URL"],
			"dependsOn": ["db:migrate:dev"]
		},
		"db:migrate:test": {
			"outputs": [],
			"inputs": ["src/migrations/**"],
			"env": ["DATABASE_URL", "GITHUB_ENV", "GITHUB_ACTIONS"]
		},
		"db:migrate:dev": {
			"outputs": [],
			"inputs": ["src/migrations/**"],
			"env": ["DATABASE_URL"]
		}
	}
}
