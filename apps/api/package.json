{
	"name": "api",
	"version": "0.0.0",
	"main": "index.ts",
	"type": "module",
	"scripts": {
		"test": "vitest --run --coverage",
		"test:watch": "vitest watch --coverage --ui",
		"build": "node ./scripts/esbuild.script.mjs --app server",
		"build:analyze": "node ./scripts/esbuild.script.mjs --app server --analyze --saveAnalyze",
		"typecheck": "tsc",
		"start": "node -r @cspotcode/source-map-support/register dist/index.js",
		"dev": "run-p dev:*",
		"_dev:start": "node --watch dist/index.js -r @cspotcode/source-map-support/register",
		"dev:start": "nodemon -r @cspotcode/source-map-support/register dist/index.js",
		"dev:build": "node ./scripts/esbuild.script.mjs --app server --watch",
		"format:fix": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --write 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"format:check": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --list-different 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"lint:check": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx --fix",
		"ts-node": "node --no-warnings --experimental-loader ../../esbuild-register-loader.mjs -r @cspotcode/source-map-support/register -r esbuild-register"
	},
	"dependencies": {
		"@cspotcode/source-map-support": "^0.8.1",
		"@fastify/under-pressure": "^8.1.0",
		"@sinclair/typebox": "^0.25.2",
		"close-with-grace": "^1.1.0",
		"env-schema": "^5.1.0",
		"fastify": "^4.9.2",
		"fastify-plugin": "^4.3.0",
		"tslib": "^2.4.1",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/node": "^17.0.12",
		"@vitest/coverage-c8": "^0.24.5",
		"@vitest/ui": "^0.24.5",
		"dotenv": "^16.0.3",
		"esbuild": "^0.15.12",
		"esbuild-register": "^3.3.3",
		"eslint": "^8.26.0",
		"eslint-config-custom-server": "workspace:*",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^9.1.1",
		"tsconfig": "workspace:*",
		"typescript": "^4.8.4",
		"vite": "^3.2.2",
		"vite-tsconfig-paths": "^3.5.2",
		"vitest": "^0.24.5"
	},
	"nodemonConfig": {
		"ignore": [
			"*.test.ts"
		],
		"ext": "ts",
		"watch": [
			"src"
		]
	}
}
