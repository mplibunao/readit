{
	"name": "@readit/api",
	"version": "0.0.0",
	"main": "src/trpc",
	"type": "module",
	"scripts": {
		"test:migrate": "pnpm -F pg-manager db:migrate:test",
		"test": "pnpm test:migrate && vitest --run --coverage --no-threads",
		"test:watch": "pnpm test:migrate && vitest watch --coverage --ui --no-threads",
		"build": "node ./scripts/esbuild.mjs --minify",
		"build:analyze": "node ./scripts/esbuild.mjs --app server --analyze --saveAnalyze --minify",
		"typecheck": "tsc --noEmit",
		"start": "node -r @cspotcode/source-map-support/register dist/index.js",
		"dev": "run-p dev:*",
		"dev:start": "node --watch dist/index.js -r @cspotcode/source-map-support/register",
		"_dev:start": "nodemon --watch src -r @cspotcode/source-map-support/register dist/index.js",
		"dev:build": "node ./scripts/esbuild.mjs --watch --minify",
		"dev:types": "tsc --watch --emitDeclarationOnly --declaration --project tsconfig.json --outDir types",
		"_dev:types": "tsc --watch --declaration --outDir ./types",
		"format:fix": "prettier --ignore-path ../../.prettierignore --write 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"format:check": "prettier --ignore-path ../../.prettierignore --list-different 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"lint:check": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx --fix",
		"ts-node": "node --no-warnings --experimental-loader ../../esbuild-register-loader.mjs -r @cspotcode/source-map-support/register -r esbuild-register"
	},
	"dependencies": {
		"@cspotcode/source-map-support": "^0.8.1",
		"@fastify/awilix": "^3.0.1",
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.2.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/rate-limit": "^7.6.0",
		"@fastify/session": "^10.1.1",
		"@fastify/under-pressure": "^8.1.0",
		"@open-draft/until": "^2.0.0",
		"@readit/flags": "workspace:*",
		"@readit/kysely-pg-config": "workspace:*",
		"@readit/logger": "workspace:*",
		"@readit/utils": "workspace:*",
		"@trpc/server": "^10.9.0",
		"@vercel/edge-config": "^0.1.0",
		"argon2": "^0.30.2",
		"awilix": "^8.0.0",
		"close-with-grace": "^1.1.0",
		"connect-redis": "^6.1.3",
		"env-schema": "^5.2.0",
		"fastify": "^4.9.2",
		"fastify-no-icon": "^6.0.0",
		"fastify-plugin": "^4.3.0",
		"ioredis": "^5.2.5",
		"kysely": "^0.22.0",
		"pg": "^8.8.0",
		"pino": "8.7.0",
		"superjson": "^1.12.0",
		"tslib": "^2.4.1",
		"zod": "^3.20.2",
		"zod-to-json-schema": "^3.20.2"
	},
	"devDependencies": {
		"@readit/pg-manager": "workspace:*",
		"@readit/prettier-config": "workspace:*",
		"@readit/tsconfig": "workspace:*",
		"@types/connect-redis": "^0.0.19",
		"@types/node": "^17.0.12",
		"@types/pg": "^8.6.5",
		"@vitest/coverage-c8": "^0.24.5",
		"@vitest/ui": "^0.24.5",
		"esbuild": "^0.15.12",
		"esbuild-register": "^3.3.3",
		"eslint": "^8.26.0",
		"eslint-config-custom-server": "workspace:*",
		"globby": "^13.1.2",
		"minimist": "^1.2.7",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"prettier": "2.8.0",
		"typescript": "^4.8.4",
		"vite": "^3.2.2",
		"vite-tsconfig-paths": "^3.5.2",
		"vitest": "^0.24.5"
	},
	"prettier": "@readit/prettier-config",
	"nodemonConfig": {
		"ignore": [
			"*.test.ts"
		],
		"ext": "ts"
	}
}
