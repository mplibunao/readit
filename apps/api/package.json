{
	"name": "@readit/api",
	"version": "0.0.0",
	"main": "src/trpc",
	"type": "module",
	"scripts": {
		"test:migrate": "NODE_ENV=test pnpm migrate latest",
		"test": "pnpm test:migrate && vitest --run --coverage",
		"test:watch": "pnpm test:migrate && vitest watch --coverage --ui",
		"build": "node ./scripts/esbuild.mjs --minify",
		"build:analyze": "node ./scripts/esbuild.mjs --app server --analyze --saveAnalyze --minify",
		"typecheck": "tsc --noEmit",
		"start": "node -r @cspotcode/source-map-support/register dist/index.js",
		"dev": "run-p dev:*",
		"dev:start": "node --watch dist/index.js -r @cspotcode/source-map-support/register",
		"_dev:start": "nodemon --watch src -r @cspotcode/source-map-support/register dist/index.js",
		"dev:build": "node ./scripts/esbuild.mjs --watch --minify",
		"_dev:types": "tsc --emitDeclarationOnly --watch --declaration --project tsconfig.json --outDir types",
		"format:fix": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --write 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"format:check": "prettier --config ../../prettier.config.cjs --ignore-path ../../.prettierignore --list-different 'src/**/*.{js,jsx,ts,tsx,md,mdx,graphql,css,scss,yaml,json}'",
		"lint:check": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "TIMING=1 eslint --color --cache --cache-location .eslintcache --ignore-path ../../.eslintignore ./src --ext .js,.jsx,.ts,.tsx --fix",
		"ts-node": "node --no-warnings --experimental-loader ../../esbuild-register-loader.mjs -r @cspotcode/source-map-support/register -r esbuild-register",
		"kysely-codegen": "kysely-codegen --dialect postgres --camel-case --out-file ./src/infra/pg/pg.generated.ts && pnpm format:fix",
		"migrate": "pnpm ts-node src/infra/pg/cliMigrate.ts",
		"migrate:up": "run-s 'migrate up' kysely-codegen format:fix"
	},
	"dependencies": {
		"@cspotcode/source-map-support": "^0.8.1",
		"@fastify/cors": "^8.2.0",
		"@fastify/under-pressure": "^8.1.0",
		"@readit/edge-config": "workspace:*",
		"@sinclair/typebox": "^0.25.2",
		"@trpc/server": "^10.5.0",
		"@vercel/edge-config": "^0.1.0",
		"argon2": "^0.30.2",
		"close-with-grace": "^1.1.0",
		"env-schema": "^5.1.0",
		"fastify": "^4.9.2",
		"fastify-plugin": "^4.3.0",
		"kysely": "^0.22.0",
		"neverthrow": "^5.1.0",
		"pg": "^8.8.0",
		"pino": "^8.7.0",
		"superjson": "^1.12.0",
		"tslib": "^2.4.1",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@readit/eslint-config-server": "workspace:*",
		"@readit/tsconfig": "workspace:*",
		"@types/node": "^17.0.12",
		"@types/pg": "^8.6.5",
		"@vitest/coverage-c8": "^0.24.5",
		"@vitest/ui": "^0.24.5",
		"dotenv": "^16.0.3",
		"esbuild": "^0.15.12",
		"esbuild-register": "^3.3.3",
		"eslint": "^8.26.0",
		"globby": "^13.1.2",
		"kysely-codegen": "^0.8.0",
		"kysely-migration-cli": "^0.1.1",
		"minimist": "^1.2.7",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^9.1.1",
		"trpc-playground": "1.0.0-next.0",
		"typescript": "^4.8.4",
		"vite": "^3.2.2",
		"vite-tsconfig-paths": "^3.5.2",
		"vitest": "^0.24.5"
	},
	"nodemonConfig": {
		"ignore": [
			"*.test.ts"
		],
		"ext": "ts"
	}
}
